<mvc:View controllerName="com.sal.feedbackform.controller.feedbackform"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fm="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:ui="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true" stickySubheaderProvider="iconTabBar" class="sapUiNoContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title id="idPageTitle" text="Feed Back Form Request"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header Content -->
        <f:header>
        </f:header>
        <!-- DynamicPage Content -->
     <f:content>
     <Panel width="auto" class="sapUiResponsiveMargin">
       <VBox class="sapUiMediumMarginEnd">
            <Label text="Q1: How do yo describe your experience with me? Give me Rating" />
				<RadioButtonGroup id="idRating" valueState="Information">
					<RadioButton text="Excellent"  />
					<RadioButton text="Neutral" />
                    <RadioButton text="Needs Improvement" />
				</RadioButtonGroup>
			</VBox>
            <VBox class="sapUiMediumMarginEnd">
            <Label text="Q2: Please enter your suggestion?" />
            <TextArea id="idSuggestion" value="" cols="40" rows="16" />
	</VBox>
    	</Panel>
        </f:content>
        <f:footer>
            <OverflowToolbar id="idOverflowToolbar">
                <ToolbarSpacer id="idToolbarSpacer"/>
                <Button text="{i18n>Submit}" type="Emphasized" press="onSubmitPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>