<mvc:View controllerName="com.sal.summarytiles.hrrequestssummarytile.controller.HRRequestsSummaryTile"
    xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <m:GenericTile id="idHRReq_SummaryTile" header="Requests" subheader="Sent by me" frameType="TwoByOne">
        <m:tileContent>
            <m:TileContent id="idHRReq_SummaryTileContent" frameType="TwoByOne">
                <m:content>
                    <ComparisonMicroChart id="idHRReq_SummaryTileChart" view="Wide" size="M" scale="M" shrinkable="true" width="100%">
                        <data>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartPending" title="Pending" value="{totalPending}" color="Critical"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartApproved" title="Approved" value="{totalApproved}" color="Good"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartRejected" title="Rejected" value="{totalRejected}" color="Error"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartCancelled" title="Cancelled" value="{totalCancelled}" color="" />
                        </data>
                    </ComparisonMicroChart>
                </m:content>
            </m:TileContent>
        </m:tileContent>
    </m:GenericTile>
</mvc:View>