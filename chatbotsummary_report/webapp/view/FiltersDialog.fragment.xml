<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Popover id="idFiltersPopover" contentHeight="15%" contentWidth="20%" title="Date Range" placement="Bottom" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">
        <VBox class="sapUiTinyMargin">
            <Label text="From Date - To Date"/>
            <DateRangeSelection id="idDateRangeSelector" value="{path:'effectiveStartDate', type:'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy' }}"/>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button id="idOk" text="Ok" type="Emphasized" press="handleFiltersOkPress" />
            </OverflowToolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>
