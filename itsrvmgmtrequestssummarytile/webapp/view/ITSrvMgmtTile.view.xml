<mvc:View controllerName="com.sal.itsrvmgmtrequestssummarytile.controller.ITSrvMgmtTile"
    xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <m:GenericTile id="idItSrvReq_SummaryTile" header="Requests" subheader="Sent by me" frameType="TwoByOne">
        <m:tileContent>
            <m:TileContent id="idItSrvReq_SummaryTileContent" frameType="TwoByOne">
                <m:content>
                     <ComparisonMicroChart id="idItSrvReq_Chart" view="Wide" size="M" scale="M" shrinkable="true" width="100%">
                        <data>
                            <ComparisonMicroChartData id="idItSrvReq_Pending" title="Pending" value="{totalPending}" color="Critical"/>
                            <ComparisonMicroChartData id="idItSrvReq_Approved" title="Approved" value="{totalApproved}" color="Good"/>
                            <ComparisonMicroChartData id="idItSrvReq_Rejected" title="Rejected" value="{totalRejected}" color="Error"/>
                            <ComparisonMicroChartData id="idItSrvReq_Cancelled" title="Cancelled" value="{totalCancelled}" color="" />
                        </data>
                    </ComparisonMicroChart>
                </m:content>
            </m:TileContent>
        </m:tileContent>
    </m:GenericTile>
</mvc:View>
