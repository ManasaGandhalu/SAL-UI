<mvc:View controllerName="com.sal.plantmaintenancereqsummarytile.controller.PlantMaintenanceReqSummaryTile"
    xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <m:GenericTile id="idPlantMainReq_SummaryTile" header="Requests" subheader="Sent by me" frameType="TwoByOne">
        <m:tileContent>
            <m:TileContent id="idPlantMainReq_SummaryTileContent" frameType="TwoByOne">
                <m:content>
                    <ComparisonMicroChart id="idPlantMainReq_Chart" view="Wide" size="M" shrinkable="true" width="100%">
                        <data>
                            <ComparisonMicroChartData id="idPlantMainReq_Pending" title="Pending" value="{totalPending}" color="Critical"/>
                            <ComparisonMicroChartData id="idPlantMainReq_Approved" title="Approved" value="{totalApproved}" color="Good"/>
                            <ComparisonMicroChartData id="idPlantMainReq_Rejected" title="Rejected" value="{totalRejected}" color="Error"/>
                            <ComparisonMicroChartData id="idPlantMainReq_Cancelled" title="Cancelled" value="{totalCancelled}"/>
                        </data>
                    </ComparisonMicroChart>
                </m:content>
            </m:TileContent>
        </m:tileContent>
    </m:GenericTile>
</mvc:View>
