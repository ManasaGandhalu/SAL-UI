
<mvc:View controllerName="com.sal.vacancy.controller.ApplyJob"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:fm="sap.ui.layout.form"
    xmlns:upload="sap.m.upload" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title id="idPageTitle" text="Apply Vacancy" class="sapUiSmallMarginBegin"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs id="idBreadcrumbs" currentLocationText="Apply Vacancy" class="sapUiSmallMarginBegin">
                        <Link id="idSalaryLink" text="{i18n>Vacancy}" press="onCreateCancelPress"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
         		<IconTabBar
		id="idIconTabBarInlineMode"
		headerMode="Inline"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				text="{i18n>MyCandProfile}"
				key="MyCandProfile"
				>
                 
        <fm:SimpleForm title="" layout="ColumnLayout" class="style-RemoveTitleHeight" columnsM="2" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
            
            <Label text="Candidate ID" />
            <Text text=""  />
           
            <Label text="Mobile Phone" required="true" />
            <Input value="" />

            <Label text="Email" required="true" />
            <Input/>

            <Label text="Dear Candidate," />
            <Text text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest"  />
           
          


         </fm:SimpleForm>  
			</IconTabFilter>
			<IconTabFilter
				text="{i18n>InternlEmpSection}"
				key="InternlEmpSection"
				>
				   
		
      <VBox>
  <Table  id="idConsumedTable" growing="true" growingThreshold="10" items="{consumptionData>/}">
                            <headerToolbar>
                                <OverflowToolbar>
                                       <Title text="{i18n>Details}" level="H4" />
                            <content>
                                <ToolbarSpacer></ToolbarSpacer>
                                <Button text="Add Details" icon="sap-icon://add" press="onAddDetailsItemsPress"></Button>
                            </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                               
                                <Column>
                                 <Label text="From Date" required="true" />
                                   
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                   <Label text="End Date " required="false" />
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                   <Label text="Event Reason" required="true" />
                                </Column>
                                <Column demandPopin="true" minScreenWidth="Tablet">
                                  <Label text="Position Title" required="true" />
                                </Column>
                                 <Column demandPopin="true" minScreenWidth="Tablet">
                                      <Label text="Department" required="false" />
                                </Column>
                                
                            </columns>
                            <items>
                                <ColumnListItem id="idBOQItems">
                                    <cells>
                                   
                                        <Text text="{consumptionData>ReservationNumber}"/>
                                        <Text text="{consumptionData>MaterialCode}"/>
                                        <Text text="{consumptionData>Plant}"/>
                                             <Text text="{consumptionData>Description}"/>
                                             <Text text="{consumptionData>StorageLocation}"/>
                                       
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                        </VBox>
			</IconTabFilter>
			<IconTabFilter
				text="{i18n>PreviousEmployement}"
				key="PreviousEmployement"
				>
				   <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="false" class="style-RemoveTitleHeight" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
            <Label text="When would you like your changes to take effect? " required="true" />
            <DatePicker value="{path:'CreateBusinessTripModel>/cust_toDutyTravelItem/0/cust_dutyTravelMain_effectiveStartDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}" minDate="{LocalViewModel>/currentDate}"/>
        </fm:SimpleForm>
			<fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="false" class="style-RemoveTitleHeight" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
            <Label text="Choose what you want to change"/>
           
            <CheckBox text="Compensation Information"></CheckBox>
             </fm:SimpleForm>
             <fm:SimpleForm title="Position Information" layout="ColumnLayout" class="style-RemoveTitleHeight" columnsM="2" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
            <Label text="Incumbent of ParentPosition" />
            <Input/>

            <Label text="Position" />
            <Input value=""  />
           
            <Label text="Time in Position" />
            <Input value="" />


         </fm:SimpleForm>   
			</IconTabFilter>
			
		</items>
	</IconTabBar>
          
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar id="idOverflowToolbar" visible="true">
                <ToolbarSpacer id="idToolbarSpacer"/>
                <Button id="idResetBTN" text="{i18n>Reset}" type="Ghost" press="onResetPress"/>
                <Button id="idCancelBTN" text="{i18n>Cancel}" type="Ghost" press="onCreateCancelPress"/>
                <Button id="idRaiseRequestBTN" text="{i18n>RaiseRequest}" press="onRaiseRequestPress" class="RaiseRequestButton"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
