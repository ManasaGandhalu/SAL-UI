<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns="sap.m" controllerName="com.sal.vacancy.controller.VacancyJobDetails" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>JobDetails}">
                        <Link text="{i18n>NewVacancy}" press=".handleToAllPOBreadcrumPress"/>
                       
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>exectiveqltyCntrlDirector}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{i18n>RequisitionID} : 12345" wrapping="true" titleStyle="H1" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>exectiveqltyCntrlDirector}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{i18n>RequisitionID} : 12345" wrapping="true" titleStyle="H1" />
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>RequisitionID} : 12345" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <VBox visible="true">
                        <Button id="btnSubmit" text="{i18n>Apply}" press="onApplyJobPress" type="Emphasized"/>
                    </VBox>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <!-- <VBox visible="true">
                <DatePicker width="20%" id="DP8" valueFormat="yyyy-MM-dd" displayFormat="dd-MM-yyyy" change="handleChange" class="sapUiSmallMarginBottom" showFooter="true"/>
            </VBox> -->
        </uxap:headerContent>

        <uxap:sections>
            <!-- JOb Purpose Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>JObPurpose}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>JObPurpose}" >
