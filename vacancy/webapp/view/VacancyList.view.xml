<mvc:View xmlns:core="sap.ui.core"
    controllerName="com.sal.vacancy.controller.VacancyList"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:ui="sap.ui.table"
>
   <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false" class="page" >
        <f:title>
            <f:DynamicPageTitle id="dynamicPageTitle" backgroundDesign="Transparent" class="sapUiNoContentPadding" >
                <f:heading>
                    <Title id="idTitleHuman" text="{i18n>NewVacancy}"/>
                </f:heading>         
            </f:DynamicPageTitle>
        </f:title>	
        <f:content>
              	<Table id="idMasterTable"
		                    inset="false"
		                    items="">
		                     <headerToolbar>
			                    <OverflowToolbar id="idMasterOverFlow">
                                    <content>
                                    
                                    <ToolbarSpacer id="idMasterToolBar"/>
                                    <SearchField id="idMasterListSearch" width="30%" placeholder="Search for Job Role" search=".onSearch" ></SearchField>
                                    <Button id="idMasterButtonSort" icon="sap-icon://sort" press="onSort"/>
                                </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                
                                <columns>
                                
                                <Column  width="3rem">
                                    <Label id="idTextType" text="{i18n>RequisitionID}" />
                                </Column>
                                 
                                <Column  width="3rem">
                                    <Label  text="{i18n>JobRole}" />
                                </Column>
                                 
                                <Column id="idMasterType" width="3rem">
                                    <Label  text="{i18n>Company}" />
                                </Column>
                                 
                                <Column  width="3rem">
                                    <Label  text="{i18n>PostedBY}" />
                                </Column>
                                   <Column  width="3rem">
                                    <Label  text="{i18n>PostedOn}" />
                                </Column>
                                 <Column  width="3rem">
                                    <Label  text="{i18n>Action}" />
                                </Column>
                               
                                
                                
                              
                            </columns>
                                <items>
                                    <ColumnListItem id="idMasterColumnList" type="Navigation" press="onMasterListPress">
                                      <cells>
                                               
                                            <Text  text="{name}" />
                                             <Text text="{name}" />
                                              <Text  text="{name}" />
                                               <Text  text="{name}" />
                                               <Text  text="{name}" />
                                               <Button   text="Apply" class="sapUiTinyMarginBegin" press="onApplyPress" />
                                              
                                       </cells> 
                                    </ColumnListItem>
                                </items>
	                </Table>
        </f:content>
	</f:DynamicPage>
</mvc:View>