<mvc:View controllerName="com.sal.summarytiles.hrrequestssummarymanagertile.controller.HRRequestsSummaryManagerTile"
    xmlns="sap.suite.ui.microchart"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <m:GenericTile id="idHRReq_SummaryTile" header="{i18n>Requests} ({totalRequests})" subheader="{i18n>Sentbyme}" frameType="TwoByOne">
        <m:tileContent>
            <m:TileContent id="idHRReq_SummaryTileContent" frameType="TwoByOne">
                <m:content>
                    <ComparisonMicroChart id="idHRReq_SummaryTileChart" view="Wide" size="M" shrinkable="true" width="100%" class="zCustomTitleWidth" change="onSelectionChange">
                        <data>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartPending" title="{i18n>Pending}" value="{totalPending}" color="Critical"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartApproved" title="{i18n>Approved}" value="{totalApproved}" color="Good"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartRejected" title="{i18n>Rejected}" value="{totalRejected}" color="Error"/>
                            <ComparisonMicroChartData id="idHRReq_SummaryTileChartCancelled" title="{i18n>Cancelled}" value="{totalCancelled}"/>
                        </data>
                    </ComparisonMicroChart>
                </m:content>
            </m:TileContent>
        </m:tileContent>
    </m:GenericTile>
</mvc:View>