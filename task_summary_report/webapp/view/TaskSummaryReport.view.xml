<mvc:View controllerName="com.sal.tasksummaryreport.controller.TaskSummaryReport"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" showHeader="false" title="{i18n>title}">
                    <VBox class="sapUiTinyMarginTop">
                        <Toolbar style="Clear">
                            <ToolbarSpacer/>
                            <DateRangeSelection id="DRS2" width="20%" change="handleChange"/>
                            <SegmentedButton selectedKey="{LocalViewModel>/SelectedSegmentBTNKey}" width="25%" selectionChange="onSegmentBTNSelect">
                                <items>
                                    <SegmentedButtonItem text="{i18n>HR}" key="HR" width="12%"/>
                                    <SegmentedButtonItem text="{i18n>Procurement}" key="Procurement"/>
                                    <SegmentedButtonItem text="{i18n>ITSM}" key="ITSM"/>
                                    <SegmentedButtonItem text="{i18n>PlantMaintenance}" key="PM"/>
                                </items>
                            </SegmentedButton>
                        </Toolbar>
                        <commons:ChartContainer id="idChartContainer" showFullScreen="true" showZoom="true" title="{i18n>HumanResource}">
                            <commons:customIcons>
                                <core:Icon src="sap-icon://table-view" color="#ffffff" backgroundColor="#333333" press="fnSetChartTableVisibility"/>
                                <core:Icon src="sap-icon://horizontal-stacked-chart" press="fnSetChartTableVisibility"/>
                                <core:Icon src="sap-icon://chart-table-view" press="fnSetChartTableVisibility"/>
                            </commons:customIcons>
                            <commons:content>
                                <commons:ChartContainerContent id="idTaskChartContainer">
                                    <commons:content>
                                        <viz:VizFrame id="idTaskVizFrame" height="300px" width="100%" vizType='stacked_bar' vizProperties="{title: {visible: false}}">
                                            <viz:dataset>
                                                <viz.data:FlattenedDataset data="{path: 'TicketsSummaryDataModel>/'}">
                                                    <viz.data:dimensions>
                                                        <viz.data:DimensionDefinition name="Name" value="{TicketsSummaryDataModel>name}"/>
                                                    </viz.data:dimensions>
                                                    <viz.data:measures>
                                                        <!-- Column chart Items -->
                                                        <viz.data:MeasureDefinition group="1" name="Completed" value="{TicketsSummaryDataModel>completed}"/>
                                                        <viz.data:MeasureDefinition group="1" name="Pending" value="{TicketsSummaryDataModel>pending}"/>
                                                        <viz.data:MeasureDefinition group="1" name="Cancelled by End User" value="{TicketsSummaryDataModel>cancelledByEndUser}"/>
                                                        <viz.data:MeasureDefinition group="1" name="Cancelled by Admin" value="{TicketsSummaryDataModel>cancelledByAdmin}"/>
                                                    </viz.data:measures>
                                                </viz.data:FlattenedDataset>
                                            </viz:dataset>
                                            <viz:feeds>
                                                <viz.feeds:FeedItem id='valueAxisFeed6' uid="valueAxis" type="Measure" values="Completed,Pending,Cancelled by End User,Cancelled by Admin"/>
                                                <viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension" values="Name"/>
                                            </viz:feeds>
                                        </viz:VizFrame>
                                    </commons:content>
                                </commons:ChartContainerContent>
                            </commons:content>
                        </commons:ChartContainer>

                        <Toolbar style="Clear" class="sapUiTinyMarginTop">
                            <Label text="{i18n>Portlet}" />
                            <ComboBox items="{path: '/CountriesCollection',sorter: { path: 'text' }}">
                                <core:Item key="{key}" text="{text}" />
                            </ComboBox>
                            <Label text="{i18n>Status}" />
                            <ComboBox items="{path: '/CountriesCollection',sorter: { path: 'text' }}">
                                <core:Item key="{key}" text="{text}" />
                            </ComboBox>
                            <Label text="{i18n>TaskType}" />
                            <ComboBox items="{path: '/CountriesCollection',sorter: { path: 'text' }}">
                                <core:Item key="{key}" text="{text}" />
                            </ComboBox>
                        </Toolbar>
                        <commons:ChartContainer id="idTaskListTable" showFullScreen="true" autoAdjustHeight="false" title="{i18n>TaskSummary}">
                            <commons:content>
                                <commons:ChartContainerContent>
                                    <commons:content>
                                        <Table items="{path: 'TicketsSummaryDataModel>/'}">
                                            <columns>
                                                <Column minScreenWidth="Desktop" width="15%">
                                                    <Label design="Bold" text="{i18n>ModuleName}"/>
                                                </Column>
                                                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="10%">
                                                    <Label design="Bold" text="{i18n>Portlate}"/>
                                                </Column>
                                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="7%">
                                                    <Label design="Bold" text="{i18n>TaskType}"/>
                                                </Column>
                                                <Column hAlign="Center" width="15%">
                                                    <Label design="Bold" text="{i18n>DetailsSummary}"/>
                                                </Column>
                                                 <Column hAlign="Center" width="10%">
                                                    <Label design="Bold" text="{i18n>From} "/>
                                                </Column>
                                                <Column hAlign="Center" width="8%">
                                                    <Label design="Bold" text="{i18n>To}"/>
                                                </Column>
                                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="15%">
                                                    <Label design="Bold" text="{i18n>Status}"/>
                                                </Column>
                                                <Column hAlign="End" width="10%">
                                                    <Label design="Bold" text="{i18n>Lastupdatedby}"/>
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem vAlign="Middle">
                                                    <cells>
                                                        <Text text="{TicketsSummaryDataModel>name}"/>
                                                        <Text text="{TicketsSummaryDataModel>completed}"/>
                                                        <Text text="{TicketsSummaryDataModel>pending}"/>
                                                        <Text text="{TicketsSummaryDataModel>cancelledByEndUser}"/>
                                                         <Text text="{TicketsSummaryDataModel>reassigned}"/>
                                                        <Text text="{TicketsSummaryDataModel>reopened}"/>
                                                        <Text text="{TicketsSummaryDataModel>cancelledByAdmin}"/>
                                                        <Label design="Bold" text="{TicketsSummaryDataModel>totalRequests}"/>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </commons:content>
                                </commons:ChartContainerContent>
                            </commons:content>
                        </commons:ChartContainer>
                    </VBox>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
