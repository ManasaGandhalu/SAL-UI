<core:View controllerName="sap.ui.s2p.mm.lib.reuse.accounting.component.controller.AccountAssignment" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:smartfield="sap.ui.comp.smartfield" xmlns:smartform="sap.ui.comp.smartform" xmlns="sap.m">
	<smartTable:SmartTable beforeRebindTable="onBeforeRebindTable" enableAutoBinding="true" id="accBasicTable" useExportToExcel="false"
		useTablePersonalisation="false" demandPopin="false" useVariantManagement="false">
		<smartTable:customToolbar width="20%">
			<Toolbar design="Transparent" height="60px">
				<ToolbarSpacer/>
				<Button id="detailsButton" press="onDetail" text="{i18n>details}" visible="false"></Button>
				<Button enabled="false" icon="sap-icon://add" id="addButton" press="onCreate" visible="false"/>
				<Button enabled="false" id="deleteButton" press="onDelete" text="{i18n>delete}" visible="false"></Button>
			</Toolbar>
		</smartTable:customToolbar>
		<Table editable="false" id="accountingTable" mode="SingleSelectLeft" selectionChange="onPressRow" updateFinished="onUpdateFinished">
			<items>
				<ColumnListItem id="accountColumn" press="onLineItemPressed">
					<cells></cells>
				</ColumnListItem>
			</items>
		</Table>
	</smartTable:SmartTable>
</core:View>
