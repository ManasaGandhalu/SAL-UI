<core:View controllerName="ui.ssuite.s2p.mm.pur.pr.prcss.s1.view.S3" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
	xmlns:table="sap.ui.table" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" id="PurchaseOrdersPreview" navButtonPress="onNavBack" showNavButton="true"
		title="{i18n>PurchaseOrdersPreview}">
		<content>
			<List backgroundDesign="Transparent" id="POList" items="{/DraftsPOHeader}" showSeparators="Inner">
				<items>
					<CustomListItem>
						<Label/>
						<Table delete="handleDelete" id="POTable" items="{DraftPOHeaderItemNav}" mode="Delete" showSeparators="All">
							<headerToolbar class='noBorderToolbar' showSeparators="None">
								<Toolbar class='noBorderToolbar' design="Transparent" height="5%">
									<CheckBox class="boldHeader" design="Bold" select='handleDraftSelect'/>
									<Label design="Bold" text="{path:'DraftSlNo',formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatDraftId'}"/>
								</Toolbar>
							</headerToolbar>
							<infoToolbar>
								<Toolbar design="Transparent" height='auto'>
									<l:VerticalLayout setSpacing="true">
										<l:HorizontalLayout class='marginBottomHL'>
											<Label text="{i18n>Supplier}:"/>
											<Link class="headerSpace" demandPopin="true" id="businessPurchaseOrderPreview" press="handleBusinessCard"
												text="{parts:[{path:'SupplyingVendorName'},{path:'Vendor'}], formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatDescMatnr'}"/>
										</l:HorizontalLayout>
										<l:HorizontalLayout class='marginBottomHL'>
											<Label text="{i18n>PURORG}:"/>
											<Text class="headerSpace" demandPopin="true"
												text="{parts:[{path:'PurchasingOrgName'}, {path:'PurchOrg'}], formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatDescMatnr'}"/>
										</l:HorizontalLayout>
										<l:HorizontalLayout>
											<Label text="{i18n>PURGRP}:"/>
											<Text
												text="{parts:[{path:'PurchasingGrpName'},{path:'PurGroup'}], formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatDescMatnr'}"/>
										</l:HorizontalLayout>
										<l:HorizontalLayout class='marginBottomHL'>
											<Label class='marginTopLabel' text="{i18n>POType}:" textAlign="End"/>
											<ComboBox change="onPOTypeChange" class="sapUiSizeCompact" id='idCBPOTypes' items="{DraftPOHeaderItemNav?DraftPOTypeSet}" selectedKey="NB"
												selectionChange="handlePOType">
												<core:Item key="{BSART}" text="{BATXT}"/>
											</ComboBox>
										</l:HorizontalLayout>
									</l:VerticalLayout>
								</Toolbar>
							</infoToolbar>
							<columns design="Transparent">
								<Column hAlign="Begin" id="Description" vAlign="Middle" width="25%">
									<Text text="{i18n>DESC}"/>
								</Column>
								<Column hAlign="Begin" id="Quantity" vAlign="Middle" width="20%">
									<Text text="{i18n>QUANT}"/>
								</Column>
								<Column hAlign="Begin" id="Requirementno" vAlign="Middle" width="25%">
									<Text text="{i18n>REQNO}"/>
								</Column>
								<Column footer="true" hAlign="Begin" id="Totalvalue" vAlign="Middle" width="25%">
									<Text text="{i18n>TOTALVALUE}"/>
									<footer hAlign="Left">
										<Text
											 text="{parts:[{path:'i18n>NetVal'},{path:'NetPrice'},{path:'Currency'}],formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatTotal'}"/>
									</footer>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<Text text="{parts:[{path:'ShortText'},{path:'Material'}],formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatDescMatnr'}"/>
									<Text text="{parts:[{path:'Quantity'},{path:'PoUnit'}],formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatQuantity'}"/>
									<Text text="{parts:[{path:'PreqNo'},{path:'PreqItem'}],formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatPrNumItmNum'}"/>
									<Text text="{parts:[{path:'TotalPrice'},{path:'Currency'}],formatter:'ui.ssuite.s2p.mm.pur.pr.prcss.s1.util.Formatter.formatCurrency'}"/>
								</ColumnListItem>
							</items>
						</Table>
					</CustomListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button enabled="false" id='idButPOSubmit' press='fnCreatePurchaseOrder' text="{i18n>SUBMIT}"/>
			</Toolbar>
		</footer>
	</Page>
</core:View>