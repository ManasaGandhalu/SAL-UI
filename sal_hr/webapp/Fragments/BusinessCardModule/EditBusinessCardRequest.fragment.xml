<core:FragmentDefinition xmlns="sap.m"
    xmlns:fm="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
      <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="false" class="style-RemoveTitleHeight">
                        <Label text="Job Title" required="true" />
                        <Input id="idEditJobTitle" value="{cust_jobTitle}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>



                    </fm:SimpleForm>
                    <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="false" class="style-RemoveTitleHeight">
                        <Label id="idDateLBL" text="P.O BOX" />
                        <Input  id="idEditPOBOX" value="{cust_poBox}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>
                        <Label text="Division" required="false" />
                        <Input id="idEditDivision" value="{cust_location}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>
                    </fm:SimpleForm>
                    <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="false" class="style-RemoveTitleHeight">
                        <Label text="Email" required="true" />
                         <Input type="Email" id="idEditEmail" value="{cust_email}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>
                        <Label text="Mobile" required="true" />
                         <Input type="Number" id="idEditMobile" value="{cust_mobile}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>
                    </fm:SimpleForm>
                    <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="false" class="style-RemoveTitleHeight">
                        <Label required="false" text="Office Number" />
                        <Input type="Number" id="idEditOfficeNo" value="{cust_officeNumber}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>

                        <Label text="{i18n>whenWouldYouLiketoText}" required="true"/>
                        <DatePicker id="idEditIncidentStartDate" value="{path:'effectiveStartDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true,UTC: true}}" change="onLeaveStartDatChange"/>
                    </fm:SimpleForm>

</core:FragmentDefinition>
