<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload">
    <form:SimpleForm id="idNewDisplayLeaveRquestSimpleForm" layout="ResponsiveGridLayout" visible="{= ${LocalViewModel>/EditMode} === true ? false : true }" columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
        <form:content>
            <Title id="idLeaveDisplayRequestDetailsTTL" text="{i18n>Request Details}" titleStyle="H5" level="H5"/>
            <!-- <Label id="idDisplayLeaveRequestIDLBL" text="{i18n>Request ID}" class="sapUiSmallMarginTop"/>
            <Text text="2411"/> -->
            <Label id="idDisplayLeaveStartDateLBL" text="{i18n>Start Date}" class="sapUiSmallMarginTop"/>
            <Text text="{path:'startDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/>
            <Label id="idDisplayLeaveTypeLBL" text="{i18n>Leave Type}"/>
            <Text text="{timeTypeModel>/externalName_defaultValue}"/>
            <!-- <Label id="idDisplayLeaveCommentsLBL" text="{i18n>Comments}"/>
            <Text text="{comment}" /> -->
            <core:Title id="idDisplayLeaveEmptyTitle" text=" "/>
            <!-- <Label id="idDisplayLeaveRequestDateLBL" text="{i18n>Request Date}"/>
            <Text text="{path:'createdDateTime',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/> -->
            <Label id="idDisplayLeaveEndDateLBL" text="{i18n>End Date}" />
            <Text text="{path:'endDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/>
            <Label id="idDisplayLeaveTotalLeaveDaysLBL" text="{i18n>Total Days}"/>
            <Text text="{displayQuantity}"/>
             
        </form:content>
    </form:SimpleForm>
    <form:SimpleForm id="idDisplayattachmentForm" layout="ResponsiveGridLayout" visible="{= ${LocalViewModel>/EditMode} === true ? false : true }" columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
        <form:content>
        <!-- <UploadCollection class="uploadClasstest" maximumFileSize="10"  multiple="true" 
                                    fileSizeExceed="onFileSizeExceed" filenameLengthExceed="onFileNameLengthExceed" 
                                    maximumFilenameLength="500" typeMissmatch="onTypeMissmatch" uploadComplete="onUploadComplete" 
                                    beforeUploadStarts="onBeforeUploadStarts" mode="None" 
                                    
                                    selectionChange="onAttachmentChange" instantUpload="false" change="onAttachmentChange" fileDeleted="onFileDeleted">
                                    <items>
                                        <UploadCollectionItem url="{parts: ['attachmentModel>/fileName','attachmentModel>/fileContent']}" enableEdit="false" enableDelete="false" visibleDelete="false" visibleEdit="false" 
                                        fileName="{attachmentModel>/fileName}" deletePress="onDeleteDocumentPress">
                                        </UploadCollectionItem>
                                    </items>
             </UploadCollection> -->
         	<upload:UploadSet
				id="UploadSet"
				instantUpload="false"
				showIcons="true"
				uploadEnabled="false"
				terminationEnabled="false"
				fileTypes="txt,doc,png"
				maxFileNameLength="30"
				maxFileSize="200"
				mediaTypes="text/plain,application/msword,image/jpeg"
                visible="{= ${LocalViewModel>/uploadAttachment} === true ? true : false}"				
				>
				<upload:toolbar>
                <OverflowToolbar>
                <Button text="Download Attachment" press="onDownLoadPress"/>
                </OverflowToolbar>
			</upload:toolbar>
			<upload:items>
				<upload:UploadSetItem
						fileName="{attachmentModel>/fileName}"
						mediaType="attachmentModel>/mimeType}"	
						>
				</upload:UploadSetItem>
			</upload:items>
		</upload:UploadSet>    
         </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>