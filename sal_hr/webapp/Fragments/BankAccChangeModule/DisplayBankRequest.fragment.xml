<core:FragmentDefinition xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
    	      
      
                   <form:SimpleForm id="idDisplaybankRequestSimpleForm" layout="ResponsiveGridLayout" 
                 columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
                   <form:content>
                        <Title id="idDisplaySpecifyDetailsTTL" text="{i18n>BankDetails}" titleStyle="H6" level="H6"/>

                        <Label id="idDisplayDateLBL" text="{i18n>effectiveStartDate}" />

            <Text text="{path:'effectiveStartDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                     pattern: 'MM/dd/yyyy'
                                                }}"/>

                        
                        <Label id="idDisplayIBANLBL" text="{i18n>IBAN}" />
                        <Text id="idDisplayIBANINP" text="{cust_iban}"  />
                        <Label id="idDisplayBankNameLBL" text="{i18n>BankName}"/>
                        <Text id="idDisplayBankNameINP" text="{cust_bankName}"  />

                    </form:content>
                   </form:SimpleForm>
           
        


</core:FragmentDefinition>
