<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox>
        <Table growing="true" growingScrollToLoad="true" growingThreshold="15" items="{HistoryData>/}">
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="{i18n>Details}" level="H4" />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <Label text="{i18n>RequestDate}" required="false" />
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <Label text="{i18n>Time}" required="false" />
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <Label text="{i18n>Summary}" required="false" />
                </Column>
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <Label text="{i18n>ActionPerformedby}" required="false" />
                </Column>
               
            </columns>
            <items>
                <ColumnListItem >
                    <cells>
                        <Text text="{path:'HistoryData>effectiveStartDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MM/dd/yyyy'
                                                }}"/>
                        <Text text="{
                                            path: 'HistoryData>createdAt',
                                            type: 'sap.ui.model.type.DateTime',
                                            formatOptions: {
                                                pattern: 'HH:mm'
                                            }
                                        }" />
                    <Text text="{HistoryData>summary}"/>
                        <Text text="{HistoryData>modifiedBy}"/>
                      
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>