<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <form:SimpleForm id="idNewDisplayTripRquestSimpleForm" layout="ResponsiveGridLayout" columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
        <form:content>
            <Title id="idTripRequestDetailsTTL" text="{i18n>RequestDetails}" titleStyle="H5" level="H5"/>
            <Label id="idTripRequestIDLBL" text="{i18n>RequestID}" class="sapUiSmallMarginTop"/>
            <Text text="2411"/>
            <Label id="idTripRequestDateLBL" text="{i18n>RequestDate}"/>
            <Text text="{path:'createdDateTime',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/>
            <Label id="idTripTravelDestinationLBL" text="{i18n>TravelDestination}"/>
            <Text text="Riyadh"/>
            <Label id="idTripStartDateLBL" text="{i18n>StartDate}"/>
            <Text text="{path:'physicalStartDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/>
            <Label id="idTripSubjectLBL" text="{i18n>Subject}"/>
            <Text text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>

            <core:Title id="idEmptyTitle" text=" "/>
            <Label id="idTripSAPTicketIDLBL" text="{i18n>SAPTicketID}"/>
            <Text text="500009095"/>
            <Label id="idTripTravelTypeLBL" text="{i18n>TravelType}"/>
            <Text text="Local"/>
            <Label id="idTripTotalDaysLBL" text="{i18n>TotalDays}"/>
            <Text text="{quantityInDays}"/>
            <Label id="idTripEndDateLBL" text="{i18n>EndDate}"/>
            <Text text="{path:'physicalEndDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}"/>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>