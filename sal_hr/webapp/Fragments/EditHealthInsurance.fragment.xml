<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <form:SimpleForm id="idNewHealthRquestSimpleForm" layout="ResponsiveGridLayout" visible="{= ${LocalViewModel>/EditMode} === true ? true : false }" columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
        <form:content>
            <Title id="idHealthEditRequestDetailsTTL" text="{i18n>Request Details}" titleStyle="H5" level="H5"/>
            <!-- <Label id="idHealthRequestIDLBL" text="{i18n>Request ID}" class="sapUiSmallMarginTop"/>
                                <Input text="2411"/> -->
            <Label id="idHealthStartDateLBL" text="{i18n>Start Date}" class="sapUiSmallMarginTop"/>
            <DatePicker id="idHealthStartDatePicker" value="{path:'physicalStartDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}" change="handleChange"/>
            <Label id="idEditHealthTypeLBL" text="{i18n>Health Type}"/>
            <Input text="Seak Health"/>
            <Label id="idHealtheditCommentsLBL" text="{i18n>Comments}"/>
            <Input text="{comment}"/>
            <core:Title id="idHealthEmptyTitle" text=" "/>
            <!-- <Label id="idHealthRequestDateLBL" text="{i18n>Request Date}"/>
                                <DatePicker id="idRequestDatePicker" value="Oct 5,2021" change="handleChange"/> -->
            <Label id="idHealthEndDateLBL" text="{i18n>End Date}"/>
            <DatePicker id="idHealthToDatePicker" value="{path:'physicalEndDate',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    pattern: 'MMMM dd, yyyy'
                                                }}" change="handleChange"/>
            <Label id="idHealthTotalHealthDaysLBL" text="{i18n>Total Days}"/>
            <Input text="{quantityInDays}"/>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>