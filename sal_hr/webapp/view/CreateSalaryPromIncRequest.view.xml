            <Label text="Division" />
            <Input value="" />

            <Label text="Department" required="true" />
            <Input/>

            <Label text="Section" />
            <Input value=""  />
           
            <Label text="Locaiton Group" />
            <Input value="" />
            
              <Label text="Location" required="true" />
            <Input/>

            <Label text="Time Zone" />
            <Input value=""  />
           
            <Label text="Cost Center" />
            <Input value="" />


         </fm:SimpleForm>  
			</IconTabFilter>
			<IconTabFilter
				text="Employee Transfer"
				key="transfer"
				>
				   <fm:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" singleContainerFullSize="false" class="style-RemoveTitleHeight" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
            <Label text="When would you like your changes to take effect? " required="true" />
            <DatePicker value="{path:'CreateBusinessTripModel>/cust_toDutyTravelItem/0/cust_dutyTravelMain_effectiveStartDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}" minDate="{LocalViewModel>/currentDate}"/>
