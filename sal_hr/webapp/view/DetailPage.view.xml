<mvc:View controllerName="com.sal.salhr.controller.DetailPage" 
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ui="sap.ui.table"
    xmlns:layout="sap.ui.layout" height="100%">
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent" class="sapUiNoContentPadding" stickySubheaderProvider="Table">
                <f:heading>
                    <Title text="{name}"/>
                </f:heading>
                <!-- <f:breadcrumbs>
                        <Breadcrumbs>
                            <Link text="Home" />
                            <Link text="Page 1" />
                            <Link text="Page 2" />
                            <Link text="Page 3" />
                            <Link text="Page 4" />
                            <Link text="Page 5" />
                        </Breadcrumbs>
                    </f:breadcrumbs> -->
                <!-- <f:actions>
                    <Button text="Raise a Request" type="Emphasized" press="onPressRaiseRequest"/>
                </f:actions> -->
                <f:navigationActions>
                    <Button text="Raise a Request" type="Emphasized" press="onPressRaiseRequest"/>
                    <Button icon="sap-icon://full-screen" type="Transparent" />
                    <!-- <Button icon="sap-icon://exit-full-screen" type="Transparent" /> -->
                    <Button icon="sap-icon://decline" type="Transparent" />
                    
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Total Request"/>
                        <Label design="Bold" text="{totalRequests}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="In Process"/>
                        <Label design="Bold" text="{totalPending}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Done"/>
                        <Label design="Bold" text="{totalApproved}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Open"/>
                        <Label design="Bold" text="{totalPending}"/>
                    </layout:VerticalLayout>

                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="idTicketTable" items="{tickets}" inset="false">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{name} Request" level="H2"/>
                            <ToolbarSpacer />
                            <SearchField placeholder="Search for requests" width="30%"></SearchField>
                            <Button icon="sap-icon://sort"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Job Card ID" />
                    </Column>

                    <Column>
                        <Text text="Request Date" />
                    </Column>
                    <Column>
                        <Text text="SAP Ticket ID" />
                    </Column>
                    <Column>
                        <Text text="From Date" />
                    </Column>
                    <Column>
                        <Text text="To Date" />
                    </Column>
                    <Column>
                        <Text text="Travel Type" />
                    </Column>
                    <Column>
                        <Text text="Total Days" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem press="onPressTicketItem" vAlign="Middle" type="Navigation">
                        <cells>
                            <!-- <Text text="{ticketCode}" /> -->
                            <Text text="{employeeId}" />
                            <Text text="{path : 'requestDate',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd.MM.yyyy'}}" />
                            <Text text="{ticketCode}" />
                            <Text text=" " />
                            <Text text=" " />
                            <Text text="Local" />
                            <Text text="2 Days" />
                            <ObjectStatus text="{statusValue}" state="Indication02" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>

