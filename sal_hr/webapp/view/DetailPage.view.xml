<mvc:View controllerName="com.sal.salhr.controller.DetailPage" 
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ui="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout" height="100%">
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="{/titleClickable}" class="page" >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent" class="sapUiNoContentPadding" stickySubheaderProvider="Table">
                <f:heading>
                    <Title text="{name}"/>
                </f:heading>
           
                <f:navigationActions>
                    <Button text="Raise a Request" press="onPressRaiseRequest" type="Emphasized"/>
                    <Button icon="sap-icon://full-screen" type="Transparent" />
                    <!-- <Button icon="sap-icon://exit-full-screen" type="Transparent" /> -->
                    <Button icon="sap-icon://decline" type="Transparent" />
                    
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <!-- <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Total Request"/>
                        <Label design="Bold" text="{totalRequests}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="In Process"/>
                        <Label design="Bold" text="{totalPending}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Done"/>
                        <Label design="Bold" text="{totalApproved}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute text="Open"/>
                        <Label design="Bold" text="{totalPending}"/>
                    </layout:VerticalLayout>

                </layout:HorizontalLayout> -->

                	<FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				
				        <VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					        <Label text="Total Requests" class="tblHeaderText"/>
					        <Text text="{totalRequests}" class="sapUiTinyMarginTop dataPointsColor "/>
				        </VBox>
				        <VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					        <Label text="In Process" class="tblHeaderText"/>
					        <Text text="3" class="sapUiTinyMarginTop dataPointsColor"/>
				        </VBox>
				        <VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					        <Label text="Done" class="tblHeaderText"/>
					        <Text text="2" class="sapUiTinyMarginTop dataPointsColor"/>
				        </VBox>
                         <VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					        <Label text="Open" class="tblHeaderText"/>
					        <Text text="1" class="sapUiTinyMarginTop dataPointsColor"/>
				        </VBox>
			        </FlexBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
              <Table id="idTicketTable" items="{tickets}" inset="false">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{name} Request" level="H2"/>
                            <ToolbarSpacer />
                            <SearchField placeholder="Search for requests" width="30%"></SearchField>
                            <Button icon="sap-icon://sort"/>
                            <Button icon="sap-icon://filter"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Label text="Job Card ID" class="tblHeaderText"/>
                    </Column>

                    <Column>
                        <Label text="Request Date" class="tblHeaderText"/>
                    </Column>
                    <Column>
                        <Label text="SAP Ticket ID" class="tblHeaderText"/>
                    </Column>
                   
                    <Column>
                        <Label text="Status" class="tblHeaderText" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem press="onPressTicketItem" vAlign="Middle" type="Navigation">
                        <cells>
                            <!-- <Text text="{ticketCode}" /> -->
                            <Text text="{employeeId}" />
                            <Text text="{path : 'requestDate',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd.MM.yyyy'}}" />
                            <Text text="{ticketCode}" />
                           
                           <ObjectStatus text="{path:'status',formatter:'.formatter.ticketStatusText'}" state="{path:'status',formatter:'.formatter.ticketStatus'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>


        </f:content>
    </f:DynamicPage>
</mvc:View>

