<mvc:View xmlns:core="sap.ui.core"
    controllerName="com.sal.salhr.controller.MasterList"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:ui="sap.ui.table"
>
   <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false" class="page" >
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent" class="sapUiNoContentPadding" stickySubheaderProvider="Table">
                <f:heading>
                    <Title text="Human Resource"/>
                </f:heading>
              
            </f:DynamicPageTitle>
        </f:title>
	
	
        <f:content>
              	<Table id="idMasterTable"
		                    inset="false"
		                    items="{/MasterSubModules}" 
                                >
		                     <headerToolbar>
			                    <OverflowToolbar>
                                    <content>
                                    
                                    <ToolbarSpacer />
                                    <SearchField id="idMasterListSearch" width="30%" placeholder="Search for Type" search=".onSearch" ></SearchField>
                                    <Button icon="sap-icon://sort" press="onSort"/>
                                </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                
                                <columns>
                                
                                <Column width="3rem">
                                    <Text text="Type" class="tblHeaderText"/>
                                </Column>
                                 <Column hAlign="Begin"  width="15rem">
                                    
                                </Column>
                                 <Column minScreenWidth="phone" demandPopin="false">
                                    
                                </Column>
                                
                                <Column hAlign="End">
                                    <Text text="Count" class="tblHeaderText" />
                                </Column>
                            </columns>
                                <items>
                                    <ColumnListItem id="idMasterColumnList" type="Navigation" press="onMasterListPress">
                                      <cells>
                                            <core:Icon src="{path:'name',formatter:'.formatter.changeIcon'}" size="1.2rem" height="3rem" class="ListIcon"></core:Icon>        
                                            <Text text="{name}" />
                                             <Text text="{description}" wrapping="true" class="textDescription"/>
                                            <Text text="{totalRequests}" class="infoColor"/>     
                                       </cells> 
                                    </ColumnListItem>
                                </items>
	                    </Table>



        </f:content>


		
	</f:DynamicPage>
</mvc:View>