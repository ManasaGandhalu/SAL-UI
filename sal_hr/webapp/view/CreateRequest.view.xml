<mvc:View controllerName="com.sal.salhr.controller.CreateRequest"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true">
        <!-- DynamicPage Title -->
        <f:title>
            <!-- <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title id="idPageTitle" text="{i18n>NewBusinessTripRequest}" class="sapUiSmallMarginBegin"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs id="idBreadcrumbs" currentLocationText="{i18n>NewBusinessTripRequest}" class="sapUiSmallMarginBegin">
                        <Link id="idHumanResourceLink" text="{i18n>HumanResource}"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle> -->
            <f:DynamicPageTitle id="idDynamicPageTitle">
               <f:heading>
                    <Title id="idPageTitle" text="New {name} Request" class="sapUiSmallMarginBegin"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs id="idBreadcrumbs" currentLocationText="New {name} Request" class="sapUiSmallMarginBegin">
                        <Link id="idHumanResourceLink" text="{i18n>HumanResource}"/>
                        <!-- <Link text="{i18n>HumanResource}"/> -->
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Content -->
        <f:content>
            <form:SimpleForm id="idNewRquestSimpleForm" title="{i18n>CreateBusinessTripRequest}" layout="ResponsiveGridLayout" 
            columnsM="3" columnsL="3" columnsXL="3" singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
                <form:content>
                    <Title id="idSpecifyDetailsTTL" text="{i18n>SpecifytheRequestdetails}" titleStyle="H6" level="H6"/>
                    <Label id="idTravelTypeLBL" text="{i18n>TravelType}" required="true" class="sapUiSmallMarginTop"/>
                    <Select id="idTravelTypeSLCT" selectedKey="{NewTripRequestModel>/TravelType}"/>
                    <Label id="idFromDateLBL" text="{i18n>FromDate}" required="true"/>
                    <DatePicker id="idFromDatePicker" value="{NewTripRequestModel>/FromDate}" change="handleChange"/>
                    <Label id="idTotalDaysLBL" text="{i18n>TotalDays}"/>
                    <Text id="idTotalDaysTXT" text="{NewTripRequestModel>/TotalDays}"/>
                    <Label id="idSubjectLBL" text="{i18n>Subject}" required="true"/>
                    <Input id="idSubjectINP" value="{NewTripRequestModel>/Subject}"/>
                    <Label id="idDescriptionLBL" text="{i18n>Description}"/>
                    <Input id="idDescriptionINP" value="{NewTripRequestModel>/Description}"/>
                    <core:Title id="idEmptyTitle" text=" "/>
                    <Label id="idTravelDestinationLBL" text="{i18n>TravelDestination}" required="true"/>
                    <Select id="idTravelDestinationSLCT" selectedKey="{NewTripRequestModel>/TravelDestination}"/>
                    <Label id="idToDateLBL" text="{i18n>ToDate}" required="true"/>
                    <DatePicker id="idToDatePicker" value="{NewTripRequestModel>/ToDate}" change="handleChange"/>
                </form:content>
            </form:SimpleForm>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar id="idOverflowToolbar" visible="true">
                <ToolbarSpacer id="idToolbarSpacer"/>
                <Button id="idResetBTN" text="{i18n>Reset}" type="Ghost" press="onResetPress"/>
                <Button id="idCancelBTN" text="{i18n>Cancel}" type="Ghost" press="onCancelPress"/>
                <Button id="idRaiseRequestBTN" text="{i18n>RaiseRequest}" press="onRaiseRequestPress" class="RaiseRequestButton"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>