<mvc:View controllerName="com.sal.feedbackreport.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" showHeader="false">
        <content>



        <IconTabBar id="idIconTabBar" select="onIconTabSelect" headerMode="Inline" expanded="true" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter  text="{i18n>Rating}" >
                       <ScrollContainer height="40%" width="100%" vertical="true"
		focusable="true">
              <Table id="idRatingsTable"
		        inset="false"
		        items="{
			        path: '/Rating'
			
		        }" growing="true" growingThreshold="5" growingScrollToLoad="true">
		
	
		<columns>
			<Column
				>
				<Text text="Employee Id" />
			</Column>
			<Column>
				<Text text="Rating" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
				
					<Text
						text="{createdBy}" />
					<Text
						text="{rating}" />
				
						
				</cells>
			</ColumnListItem>
		</items>
	</Table>

        </ScrollContainer>

                    </IconTabFilter>
                    <IconTabFilter  text="{i18n>Suggestions}" >
                        <ScrollContainer height="40%" width="100%" class="sapUiSmallMarginTop" vertical="true" focusable="true">
       
       <Table id="idSuggestionsTable"
		        inset="false"
		        items="{
			        path: '/Suggestion'
			
		        }" growing="true" growingScrollToLoad="true" growingThreshold="5">
	
	
		<columns>
			<Column
				>
				<Text text="Employee Id" />
			</Column>
			<Column>
				<Text text="Suggestion" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
				
					<Text
						text="{createdBy}" />
					<Text
						text="{suggestion}" />
				
						
				</cells>
			</ColumnListItem>
		</items>
	</Table>
       </ScrollContainer>
                    </IconTabFilter>
                     <IconTabFilter  text="{i18n>Complaints}" >

                      <ScrollContainer height="40%" width="100%" class="sapUiSmallMarginTop" vertical="true" focusable="true">
       
       <Table id="idComplainsTable"
		        inset="false"

                items="{ path: '/Answer', filters: [{ path: 'questionId', operator: 'EQ', value1: '5' }] }" growing="true" growingScrollToLoad="true" growingThreshold="5">
	
	
		<columns>
			<Column
				>
				<Text text="Employee Id" />
			</Column>
			<Column>
				<Text text="Complain" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
				
					<Text
						text="{createdBy}" />
					<Text
						text="{answerText}" />
				
						
				</cells>
			</ColumnListItem>
		</items>
	</Table>
       </ScrollContainer>
                       
                    </IconTabFilter>
                </items>
            </IconTabBar>

        <!-- <OverflowToolbar>
				<content>
					<Title text="Ratings" level="H1" />
					<ToolbarSpacer />
					
				
				</content>
			</OverflowToolbar> -->

       

        
			<!-- <OverflowToolbar class="sapUiLargeMarginTop">
				<content>
					<Title text="Suggestions" level="H1" />
					<ToolbarSpacer />
					
				
				</content>
			</OverflowToolbar>
	 -->
        	
      
    	
        
        </content>
    </Page>
</mvc:View>
